<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GameBoardFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-30dp"
                android:layout_weight="1"
                android:src="@drawable/avatar_3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatarCards1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:src="@drawable/karten3" />

                <TextView
                    android:id="@+id/avatarName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Nico"
                    android:textColor="#FF9800"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/avatarPoints1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Punktestand"
                    android:textColor="#F44336"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/avatar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-30dp"
                android:layout_weight="1"
                android:src="@drawable/avatar_4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatarCards2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:src="@drawable/karten3" />

                <TextView
                    android:id="@+id/avatarName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Felix"
                    android:textColor="#E4C493"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/avatarPoints2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Punktestand"
                    android:textColor="#F44336"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/avatar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-30dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:src="@drawable/avatar_2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatarCards3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:src="@drawable/karten3" />

                <TextView
                    android:id="@+id/avatarName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Florian"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/avatarPoints3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Punktestand"
                    android:textColor="#F44336"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="30"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pileDeck"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/stapel" />

            <ImageButton
                android:id="@+id/pileDiscard"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <Space
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/pilePanel1"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/pilePanel2"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/pilePanel3"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <Space
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/pileSubmission"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="30"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/playerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Alena"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/playerPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Punktestand"
                    android:textColor="#F44336"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/pilePlayer1"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/pilePlayer2"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/pilePlayer3"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/pilePlayer4"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/pilePlayer5"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/pilePlayer6"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/pilePlayer7"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/pilePlayer8"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/votingUiOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="#000000"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="at.derfl007.jokinghazard.fragments.VotingUIFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="#000000"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waiting_for_players" />
    </LinearLayout>


</FrameLayout>

