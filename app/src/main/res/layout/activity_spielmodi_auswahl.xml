<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".activities.SpielmodiAuswahl">


    <TextView
        android:id="@+id/spielModiAuswahl"
        android:layout_width="301dp"
        android:layout_height="86dp"
        android:layout_marginTop="32dp"
        android:text="WÃ¤hle deinen Spielmodus aus"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSpielmodiJerkMode"
        android:layout_width="192dp"
        android:layout_height="58dp"
        android:layout_marginTop="25dp"
        android:background="@color/green"
        android:text="JerkMode"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/spielModiAuswahl"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/spielModiAuswahl"
        app:layout_constraintTop_toBottomOf="@+id/spielModiAuswahl" />

    <Button
        android:id="@+id/buttonSielmodiMarathon"
        android:layout_width="192dp"
        android:layout_height="58dp"
        android:layout_marginTop="25dp"
        android:background="@color/blue"
        android:text="Marathon"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/buttonSpielmodiJerkMode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonSpielmodiJerkMode"
        app:layout_constraintTop_toBottomOf="@+id/buttonSpielmodiJerkMode" />

    <Button
        android:id="@+id/buttonSpielmodiNeverendingStory"
        android:layout_width="192dp"
        android:layout_height="58dp"
        android:layout_marginTop="25dp"
        android:background="#9E9C9C"
        android:text=" Neverending Story"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/buttonSielmodiMarathon"
        app:layout_constraintStart_toStartOf="@+id/buttonSielmodiMarathon"
        app:layout_constraintTop_toBottomOf="@+id/buttonSielmodiMarathon" />

</androidx.constraintlayout.widget.ConstraintLayout>