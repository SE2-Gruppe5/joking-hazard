<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.spielbrett">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-30dp"
                android:layout_weight="1"
                android:src="@drawable/avatar_3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatarCards1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:src="@drawable/karten3" />

                <TextView
                    android:id="@+id/avatarName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Nico"
                    android:textColor="#FF9800"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/avatarPoints1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Punktestand"
                    android:textColor="#F44336"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/avatar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-30dp"
                android:layout_weight="1"
                android:src="@drawable/avatar_4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatarCards2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:src="@drawable/karten3" />

                <TextView
                    android:id="@+id/avatarName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Felix"
                    android:textColor="#E4C493"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/avatarPoints2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Punktestand"
                    android:textColor="#F44336"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/avatar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-30dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:src="@drawable/avatar_2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatarCards3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:src="@drawable/karten3" />

                <TextView
                    android:id="@+id/avatarName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Florian"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/avatarPoints3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Punktestand"
                    android:textColor="#F44336"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="30"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cardStack"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/stapel" />

            <ImageButton
                android:id="@+id/drawCard"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <Space
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/gameCard1"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/gameCard2"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/gameCard3"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerGameCard1"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerGameCard2"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerGameCard3"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="30"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/playerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Alena"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/playerPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Punktestand"
                    android:textColor="#F44336"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/playerCard1"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerCard2"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerCard3"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerCard4"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerCard5"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerCard6"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerCard7"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

            <ImageButton
                android:id="@+id/playerCard8"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/transparent" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

